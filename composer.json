{
  "name": "onx/sanitize",
  "version": "1.2.0",
  "description": "Helper that provides methods for text sanitization.",
  "type": "library",
  "require": {
    "php": "^8.1.0 || ^8.2.0"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Onx\\Sanitize\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ],
    "exclude-from-classmap": [
      "/tests/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Onx\\Sanitize\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "src\\Providers\\SanitizeServiceProvider"
      ],
      "aliases": {
        "Sanitize": "Onx\\Sanitize\\Sanitize"
      }
    }
  },
  "authors": [
    {
      "name": "Szymon Kilian",
      "email": "szymonkilian98@o2.pl"
    }
  ],
  "minimum-stability": "dev",
  "require-dev": {
    "phpunit/phpunit": "^11.0@dev",
    "illuminate/support": "^11.0@dev"
  }
}
